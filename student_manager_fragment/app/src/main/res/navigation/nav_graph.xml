<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/studentListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.student_manager.StudentListFragment">

        <action
            android:id="@+id/action_studentListFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment"/>

        <action
            android:id="@+id/action_studentListFragment_to_studentDetailFragment"
            app:destination="@id/studentDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.student_manager.AddStudentFragment"/>

    <fragment
        android:id="@+id/studentDetailFragment"
        android:name="com.example.student_manager.StudentDetailFragment"/>
</navigation>
