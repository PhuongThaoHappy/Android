<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ECECEC">

    <!-- Màn hình hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="36sp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridGroup" />

    <!-- Khu vực chứa các nút -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <!-- Cột -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_col1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25329816" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_col2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_col3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <!-- Hàng -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <!-- Các nút -->
        <Button android:id="@+id/btnCE" android:text="CE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g_col1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/g_row1"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnC" android:text="C"
            app:layout_constraintStart_toStartOf="@id/g_col1"
            app:layout_constraintEnd_toStartOf="@id/g_col2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/g_row1"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnBS" android:text="BS"
            app:layout_constraintStart_toStartOf="@id/g_col2"
            app:layout_constraintEnd_toStartOf="@id/g_col3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/g_row1"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnDiv" android:text="/"
            app:layout_constraintStart_toStartOf="@id/g_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/g_row1"
            android:layout_width="0dp" android:layout_height="0dp" />

        <!-- Hàng 2 -->
        <Button android:id="@+id/btn7" android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g_col1"
            app:layout_constraintTop_toTopOf="@id/g_row1"
            app:layout_constraintBottom_toTopOf="@id/g_row2"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn8" android:text="8"
            app:layout_constraintStart_toStartOf="@id/g_col1"
            app:layout_constraintEnd_toStartOf="@id/g_col2"
            app:layout_constraintTop_toTopOf="@id/g_row1"
            app:layout_constraintBottom_toTopOf="@id/g_row2"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn9" android:text="9"
            app:layout_constraintStart_toStartOf="@id/g_col2"
            app:layout_constraintEnd_toStartOf="@id/g_col3"
            app:layout_constraintTop_toTopOf="@id/g_row1"
            app:layout_constraintBottom_toTopOf="@id/g_row2"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnMul" android:text="×"
            app:layout_constraintStart_toStartOf="@id/g_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/g_row1"
            app:layout_constraintBottom_toTopOf="@id/g_row2"
            android:layout_width="0dp" android:layout_height="0dp" />

        <!-- Hàng 3 -->
        <Button android:id="@+id/btn4" android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g_col1"
            app:layout_constraintTop_toTopOf="@id/g_row2"
            app:layout_constraintBottom_toTopOf="@id/g_row3"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn5" android:text="5"
            app:layout_constraintStart_toStartOf="@id/g_col1"
            app:layout_constraintEnd_toStartOf="@id/g_col2"
            app:layout_constraintTop_toTopOf="@id/g_row2"
            app:layout_constraintBottom_toTopOf="@id/g_row3"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn6" android:text="6"
            app:layout_constraintStart_toStartOf="@id/g_col2"
            app:layout_constraintEnd_toStartOf="@id/g_col3"
            app:layout_constraintTop_toTopOf="@id/g_row2"
            app:layout_constraintBottom_toTopOf="@id/g_row3"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnSub" android:text="-"
            app:layout_constraintStart_toStartOf="@id/g_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/g_row2"
            app:layout_constraintBottom_toTopOf="@id/g_row3"
            android:layout_width="0dp" android:layout_height="0dp" />

        <!-- Hàng 4 -->
        <Button android:id="@+id/btn1" android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g_col1"
            app:layout_constraintTop_toTopOf="@id/g_row3"
            app:layout_constraintBottom_toTopOf="@id/g_row4"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn2" android:text="2"
            app:layout_constraintStart_toStartOf="@id/g_col1"
            app:layout_constraintEnd_toStartOf="@id/g_col2"
            app:layout_constraintTop_toTopOf="@id/g_row3"
            app:layout_constraintBottom_toTopOf="@id/g_row4"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn3" android:text="3"
            app:layout_constraintStart_toStartOf="@id/g_col2"
            app:layout_constraintEnd_toStartOf="@id/g_col3"
            app:layout_constraintTop_toTopOf="@id/g_row3"
            app:layout_constraintBottom_toTopOf="@id/g_row4"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnAdd" android:text="+"
            app:layout_constraintStart_toStartOf="@id/g_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/g_row3"
            app:layout_constraintBottom_toTopOf="@id/g_row4"
            android:layout_width="0dp" android:layout_height="0dp" />

        <!-- Hàng 5 -->
        <Button android:id="@+id/btnSign" android:text="+/-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g_col1"
            app:layout_constraintTop_toTopOf="@id/g_row4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btn0" android:text="0"
            app:layout_constraintStart_toStartOf="@id/g_col1"
            app:layout_constraintEnd_toStartOf="@id/g_col2"
            app:layout_constraintTop_toTopOf="@id/g_row4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnDot" android:text="."
            app:layout_constraintStart_toStartOf="@id/g_col2"
            app:layout_constraintEnd_toStartOf="@id/g_col3"
            app:layout_constraintTop_toTopOf="@id/g_row4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:layout_height="0dp" />

        <Button android:id="@+id/btnEqual" android:text="="
            app:layout_constraintStart_toStartOf="@id/g_col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/g_row4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:layout_height="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
